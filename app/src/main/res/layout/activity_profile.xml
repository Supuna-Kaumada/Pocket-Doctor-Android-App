<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    tools:context="com.uwu.cstgroupproject.pocketdoctor.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/my_profile_pic"
               android:layout_width="300dp"
               android:layout_height="300dp"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="15dp"
               android:src="@drawable/profile" />
           
           <TextView
               android:id="@+id/my_profile_fullname"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Profile Name"
               android:layout_below="@id/my_profile_pic"
               android:layout_marginTop="5dp"
               android:textAlignment="center"
               android:textAllCaps="false"
               android:textColor="@android:color/white"
               android:textSize="20sp"
               android:textStyle="bold"/>

           <TextView
               android:id="@+id/my_username"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="username"
               android:layout_below="@id/my_profile_fullname"
               android:textAlignment="center"
               android:textAllCaps="false"
               android:textColor="@android:color/white"
               android:textSize="18sp" />

           <TextView
               android:id="@+id/my_profile_status"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Hello I'm using Pocket Doctor. developed by UWU CST"
               android:layout_below="@id/my_username"
               android:textAlignment="center"
               android:textAllCaps="false"
               android:textColor="@android:color/darker_gray"
               android:textSize="22sp" />

           <TextView
               android:id="@+id/my_city"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="City"
               android:layout_marginTop="60dp"
               android:layout_below="@id/my_profile_status"
               android:textAlignment="center"
               android:textAllCaps="false"
               android:textColor="@android:color/white"
               android:textSize="18sp" />

           <TextView
               android:id="@+id/my_dob"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Date Of Birth"
               android:layout_below="@id/my_city"
               android:layout_marginTop="2dp"
               android:textAlignment="center"
               android:textAllCaps="false"
               android:textColor="@android:color/white"
               android:textSize="18sp" />

           <TextView
               android:id="@+id/my_gender"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Gender"
               android:layout_below="@id/my_dob"
               android:layout_marginTop="2dp"
               android:textAlignment="center"
               android:textAllCaps="false"
               android:textColor="@android:color/white"
               android:textSize="18sp" />

           <TextView
               android:id="@+id/my_relationship"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Relationship Status"
               android:layout_below="@id/my_gender"
               android:layout_marginTop="2dp"
               android:textAlignment="center"
               android:textAllCaps="false"
               android:textColor="@android:color/white"
               android:textSize="18sp" />

           <TextView
               android:id="@+id/my_height"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Hieght"
               android:layout_below="@id/my_relationship"
               android:layout_marginTop="2dp"
               android:textAlignment="center"
               android:textAllCaps="false"
               android:textColor="@android:color/white"
               android:textSize="18sp" />

           <TextView
               android:id="@+id/my_weight"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Wieght"
               android:layout_below="@id/my_height"
               android:layout_marginTop="2dp"
               android:textAlignment="center"
               android:textAllCaps="false"
               android:textColor="@android:color/white"
               android:textSize="18sp" />

           <TextView
               android:id="@+id/my_bloodgroup"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Blood Group"
               android:layout_below="@id/my_weight"
               android:layout_marginTop="2dp"
               android:textAlignment="center"
               android:textAllCaps="false"
               android:textColor="@android:color/white"
               android:textSize="18sp" />

       </RelativeLayout>
    </ScrollView>
</RelativeLayout>
